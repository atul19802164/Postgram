<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tathagat.postgram.register" android:background="@drawable/login" android:padding="10dp">

    <ImageView
            android:src="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/login_icon" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/login_email" android:layout_below="@id/login_icon" android:layout_marginTop="10dp"
            android:hint="Email" android:textSize="20sp" android:drawableLeft="@drawable/email"
            android:background="@drawable/inputs" android:padding="10dp"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password" android:layout_below="@id/login_email" android:layout_marginTop="10dp"
            android:hint="Password" android:textSize="20sp" android:background="@drawable/inputs"
            android:padding="10dp" android:drawableLeft="@drawable/password"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/blackcursor"/>
    <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/login_account"
            android:layout_below="@id/forgot_password"
            android:layout_marginTop="10dp" android:textSize="20sp" android:textStyle="bold"
            android:background="@drawable/buttons" android:textColor="#fff" android:padding="10dp"/>
    <TextView
            android:text="Don't have an account? Create Now!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/register_account_link" android:layout_below="@id/login_account"
            android:layout_marginTop="10dp" android:textSize="18sp" android:textColor="@android:color/holo_red_dark"
            android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/forgot_password"
            android:layout_below="@id/login_password"
            android:layout_marginTop="10dp" android:textSize="16sp" android:textColor="@android:color/holo_blue_dark"
            android:gravity="center" android:textStyle="bold"
            android:layout_centerHorizontal="true" android:layout_alignParentRight="true"/>
    <Button
            android:text="Your Mobile Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/login_with_phone_link"
            android:layout_below="@id/textView3"
            android:layout_marginTop="10dp" android:textSize="18sp" android:background="@drawable/buttons"
            android:gravity="center" android:textStyle="bold" android:textColor="#fff"/>
    <TextView
            android:text="Or Login With"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_below="@id/register_account_link"
            android:layout_marginTop="20dp" android:textSize="16sp" android:gravity="center"/>
</RelativeLayout>