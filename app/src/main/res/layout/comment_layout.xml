<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commenter_userpic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toRightOf="@id/commenter_userpic"
            android:layout_marginRight="5dp" android:background="@drawable/inputs" android:padding="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/comment_username" android:textColor="#000"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/comment_desp" android:textColor="#000"
        />
    </LinearLayout>
</RelativeLayout>