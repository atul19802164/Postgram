<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.tathagat.postgram.userinfo_friends" android:padding="10dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userinfofriends_profile_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/profile"
        />
        <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content" android:id="@+id/userinfofriends_username"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_gravity="center_vertical" android:layout_marginLeft="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/userinfofriends_send_request"
                android:background="@color/colorPrimaryDark" android:textColor="@android:color/background_light"
                android:textSize="14sp" android:layout_centerHorizontal="false"
                android:layout_marginTop="10dp"
                android:padding="5dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>