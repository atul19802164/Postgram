<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tathagat.postgram.setup" android:background="@drawable/login" android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_username" android:layout_below="@id/edit_profile_image"
            android:layout_marginTop="10dp"
            android:hint="Username" android:textSize="20sp"
            android:background="@drawable/inputs" android:padding="10dp"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_fullname" android:layout_below="@id/edit_username"
            android:layout_marginTop="10dp"
            android:hint="Full Name" android:textSize="20sp"
            android:background="@drawable/inputs" android:padding="10dp"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/edit_status" android:layout_below="@id/edit_fullname"
            android:layout_marginTop="10dp"
            android:hint="Status" android:textSize="20sp"
            android:background="@drawable/inputs" android:padding="10dp"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <Button
            android:text="Save"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/edit_information_btn"
            android:layout_below="@id/edit_status"
            android:layout_marginTop="10dp" android:textSize="20sp" android:textStyle="bold"
            android:background="@drawable/buttons" android:textColor="#fff" android:padding="10dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>