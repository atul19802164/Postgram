<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tathagat.postgram.register" android:background="@drawable/login" android:padding="10dp">

    <ImageView
            android:src="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/register_icon" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_email" android:layout_below="@id/register_icon" android:layout_marginTop="20dp"
            android:hint="Email" android:textSize="20sp" android:drawableLeft="@drawable/email"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:background="@drawable/inputs" android:padding="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"

            android:id="@+id/register_password" android:layout_below="@id/register_email" android:layout_marginTop="20dp"
            android:hint="Password" android:textSize="20sp" android:background="@drawable/inputs"
            android:padding="10dp" android:drawableLeft="@drawable/password"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_confirm_password" android:layout_below="@id/register_password" android:layout_marginTop="20dp"
            android:hint="Confirm Password" android:textSize="20sp" android:background="@drawable/inputs"
            android:padding="10dp" android:drawableLeft="@drawable/password"
            android:textCursorDrawable="@drawable/blackcursor" android:cursorVisible="true"
            android:textColorHighlight="@android:color/holo_blue_light"/>
    <Button
            android:text="Create Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/register_create_account" android:layout_below="@id/register_confirm_password"
            android:layout_marginTop="30dp" android:textSize="20sp" android:textStyle="bold"
            android:background="@drawable/buttons" android:textColor="#fff" android:padding="10dp"/>
</RelativeLayout>