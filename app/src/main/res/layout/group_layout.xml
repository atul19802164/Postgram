<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
    />
    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:id="@+id/group_name"
            android:textSize="18sp"
            android:textStyle="bold" android:layout_toRightOf="@id/group_image"
            android:layout_centerVertical="false" android:layout_marginLeft="5dp"
            android:textColor="#000"/>

    android:textColor="#000"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/message_desp_group"
            android:textSize="18sp"
            android:layout_toRightOf="@id/group_image"
            android:layout_centerVertical="false" android:layout_marginLeft="5dp"
            android:textColor="@android:color/darker_gray" android:layout_below="@id/group_name"
    />
</RelativeLayout>