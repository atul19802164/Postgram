<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tathagat.postgram.register" android:background="@drawable/login" android:padding="10dp">

    <ImageView
            android:src="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/login_icon1" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/login_phoneno" android:layout_below="@id/login_icon1" android:layout_marginTop="10dp"
            android:hint="Your Mobile Number" android:textSize="20sp" android:background="@drawable/inputs"
            android:padding="10dp" android:drawableLeft="@drawable/phone_icon"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/blackcursor"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/verification_code" android:layout_below="@id/login_icon1" android:layout_marginTop="10dp"
            android:hint="Verification Code" android:textSize="20sp" android:background="@drawable/inputs"
            android:padding="10dp" android:drawableLeft="@drawable/password"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/blackcursor" android:visibility="invisible"/>
    <Button
            android:text="Send Verification Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/send_verification_btn"
            android:layout_below="@id/login_phoneno"
            android:layout_marginTop="10dp" android:textSize="20sp" android:textStyle="bold"
            android:background="@drawable/buttons" android:textColor="#fff" android:padding="10dp"/>
    <Button
            android:text="Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/verify_code_btn"
            android:layout_below="@id/login_phoneno"
            android:layout_marginTop="10dp" android:textSize="20sp" android:textStyle="bold"
            android:background="@drawable/buttons" android:textColor="#fff" android:padding="10dp"
            android:visibility="invisible"/>
</RelativeLayout>