<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="5dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend_status_userpic"
                android:layout_width="45dp"
                android:layout_height="45dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/story_username" android:gravity="center"
                android:textSize="12sp" android:textColor="#000" android:layout_marginTop="5dp"
        />
    </LinearLayout>
</RelativeLayout>