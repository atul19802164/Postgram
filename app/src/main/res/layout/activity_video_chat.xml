<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tathagat.postgram.VideoChatActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/subscriber_container"
                android:background="@color/Grey_700">

        </FrameLayout>
        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp" android:id="@+id/publisher_container"
                android:layout_gravity="bottom|end" android:background="@android:color/holo_green_dark"
                android:layout_margin="10dp">

        </FrameLayout>
    </FrameLayout>
    <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp" app:srcCompat="@drawable/cancel_call" android:id="@+id/cancel_call_video"
            android:layout_alignParentBottom="true" android:layout_margin="20dp"/>
</RelativeLayout>