<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tathagat.postgram">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:name="com.tathagat.postgram.postgram"
            android:theme="@style/AppTheme">
        <activity android:name="com.tathagat.postgram.VideoChatActivity">
        </activity>
        <activity android:name="com.tathagat.postgram.CallingActivity">
        </activity>
        <activity android:name="com.tathagat.postgram.GroupMembers">
        </activity>
        <activity android:name="com.tathagat.postgram.AddMember">
        </activity>
        <activity android:name="com.tathagat.postgram.GroupChatActivity">
        </activity>
        <activity android:name="com.tathagat.postgram.Groups">
        </activity>
        <activity
                android:name="com.tathagat.postgram.forgot_password"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.EditProfile"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.UserPostActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.Phone_Login"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.ImageInFullSize"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.MessageList"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.MessageActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.likes"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.comment"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.Story_Views"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.add_story"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.StoryActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.userinfo_friends"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.user_information"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.friends_request"
                android:parentActivityName="com.tathagat.postgram.MainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.MyFriend"
                android:parentActivityName="com.tathagat.postgram.MainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.ProfileActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.find_friends"
                android:parentActivityName="com.tathagat.postgram.MainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.PostActivity"
                android:parentActivityName="com.tathagat.postgram.MainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.setup"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.login"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.register"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.tathagat.postgram.MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name="com.tathagat.postgram.MyFirebaseMessagingService"
                android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>

        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:theme="@style/Base.Theme.AppCompat"/>
    </application>

</manifest>